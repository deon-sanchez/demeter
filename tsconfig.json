{
  "compilerOptions": {
    "target": "es2020", // Compiled JavaScript target.
    "module": "es2020", // Use ECMAScript modules.
    "moduleResolution": "node", // Module resolution strategy.
    "outDir": "./dist", // Output directory for compiled files.
    "rootDir": "./src", // Root directory for source files.
    "strict": true, // Enable all strict type-checking options.
    "esModuleInterop": true, // Enables compatibility with default-imported modules.
    "skipLibCheck": true, // Skip type checking of declaration files.
    "forceConsistentCasingInFileNames": true, // Ensure case sensitivity in imports.
    "resolveJsonModule": true, // Allow importing .json files.
    "experimentalDecorators": true, // Enable experimental support for decorators.
    "emitDecoratorMetadata": true, // Emit design-type metadata for decorated declarations.
    "types": ["node", "jest"], // Type declaration files to be included.
    "lib": ["es2020"] // List of library files to be included in the compilation.
  },
  "include": ["src/**/*"], // Include all files in the src directory.
  "exclude": ["node_modules", "dist", "**/*.spec.ts"], // Exclude node_modules and dist directories, and test files.
  "jest": {
    "preset": "ts-jest", // Use ts-jest preset for Jest configuration.
    "testEnvironment": "node" // Specify Jest test environment.
  }
}
